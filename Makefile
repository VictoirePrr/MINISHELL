NAME    =  minishell

CC := cc
CPPFLAGS = -MMD -MP
CCFLAGS := -Wall -Wextra -Werror -g3
LDFLAGS := -lreadline
SRC_DIR := src/
INCLUDES:= include/
SRC := $(addprefix $(SRC_DIR), parsing.c list_utils.c parsing_utils.c handle_commands.c \
	handle_whitespace.c pre_tokenisation.c tokenisation.c identify_tokens.c)

OBJ_DIR := .obj/
OBJ := $(SRC:$(SRC_DIR)%.c=$(OBJ_DIR)%.o)

DEPS := $(OBJ:%.o=%.d)

LIBFT_DIR := libft/
LIBFT := $(LIBFT_DIR)libft.a 
LIBFT_FLAG := -L $(LIBFT_DIR) $(LIBFT)

HEADERS:= -I $(INCLUDES) -I $(LIBFT_DIR)

# Colors

DEF_COLOR = \033[0;39m
GRAY = \033[0;90m
RED = \033[0;91m
GREEN = \033[0;92m
YELLOW = \033[0;93m
BLUE = \033[0;94m
MAGENTA = \033[0;95m
CYAN = \033[0;96m
WHITE = \033[0;97m
PURPLE=\033[35m

all: $(NAME)

$(NAME): $(LIBFT) $(OBJ)
	$(CC) $(CCFLAGS) $(OBJ) $(LIBFT_FLAG) -o $(NAME) $(LDFLAGS)
	 @echo "$(PURPLE) âœ¨ $(NAME) compiled âœ¨$(DEF_COLOR)"
	$(MAKE) kitty
	

$(OBJ_DIR)%.o: $(SRC_DIR)%.c
	@mkdir -p $(OBJ_DIR)
	@echo "$(BLUE)...Compiling...: $< $(DEF_COLOR)"
	$(CC) $(CCFLAGS) $(CPPFLAGS) $(HEADERS) -c $< -o $@
$(LIBFT): libft

libft:
	$(MAKE) -C $(LIBFT_DIR)

