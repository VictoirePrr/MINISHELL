	@echo									â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â €â ˆâ â €â €


clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	$(MAKE) fclean -C $(LIBFT_DIR)
	@echo "$(YELLOW) ðŸ§½ $(NAME) successfully cleaned ðŸ§½ $(DEF_COLOR)"
	$(MAKE) kitty
	rm -f $(NAME)

re: fclean all

info:
	@echo "DEPS": $(DEPS)
-include $(DEPS)

.PHONY: all clean fclean re libft kitty
